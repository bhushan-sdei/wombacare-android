<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/_16sdp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_45ssp"
        android:src="@mipmap/app_logo" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_45ssp"
        android:layout_marginTop="@dimen/_65sdp"
        android:src="@drawable/ic_tick" />

    <com.app.womba.utils.customViews.RegularTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_45ssp"
        android:layout_marginTop="@dimen/_35sdp"
        android:text="Hi, Login Successful !"
        android:textColor="@color/black"
        android:textSize="@dimen/_18ssp" />

    <com.app.womba.utils.customViews.SemiBoldTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_45ssp"
        android:layout_marginBottom="@dimen/_40sdp"
        android:text="Welcome to Womba Care"
        android:textColor="@color/black"
        android:textSize="@dimen/_18ssp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#638CC9"
        android:orientation="vertical">

        <com.app.womba.utils.customViews.RegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_45ssp"
            android:layout_marginTop="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_35sdp"
            android:text="Complete your profile to access all the features."
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp" />

        <Button
            android:id="@+id/btnProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_45ssp"
            android:layout_marginEnd="@dimen/_45sdp"
            android:background="@drawable/dark_buton_bg"
            android:layout_marginTop="@dimen/_22sdp"
            android:text="Go to Profile"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>
